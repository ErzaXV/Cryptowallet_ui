<Window x:Class="Crypto_wallet_ui.login_page"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Height="611" Width="441" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen"
MouseDown="Mousedown_event">
    <Border Background="{StaticResource ExodusBackgroundBrush}" CornerRadius="40" HorizontalAlignment="Center" VerticalAlignment="Center" Height="610" Width="441">
        <Grid MouseDown="Mousedown_event">
            <Image Source="/images2/Zoinbase.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="236" Width="922" Margin="-74,-5,0,0" />
            <Button Foreground="White" Background="Transparent" Content="Or use seed phrase"  Margin="118,288,117,288"  FontSize="20" />
            <Button Foreground="White" Background="Transparent" Content="Use private key"  Margin="118,229,117,346"  FontSize="20" />
            <Button Click="Application_minimize"  BorderBrush="Transparent" Width="27" Height="28" Background="Transparent" Margin="363,5,51,577">
                <Image Height="29" Width="23" Source="/images2/-.png" RenderTransformOrigin="6.548,0.126"/>
            </Button>
            <Button Click="Application_exit" BorderBrush="Transparent" Width="36" Height="38" Margin="385,0,20,572" Background="Transparent">
                <Image Height="32" Width="30" Source="/images2/X.png"/>
            </Button>
            <Label Foreground="White" Content="OR" HorizontalAlignment="Center" Margin="0,346,0,0" VerticalAlignment="Top" FontSize="20"/>
            <Button Background="Transparent" Margin="118,391,274,173">
                <Image Height="43" RenderTransformOrigin="0.5,0.5" Width="48" Source="/images2/google-removebg-preview.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>

                </Image>
            </Button>
            <Button Background="Transparent" Margin="196,391,195,173">
                <Image Height="43" RenderTransformOrigin="0.5,0.5" Width="48" Source="/images2/coinbase_logo.jpg">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>

                </Image>
            </Button>
            <Button Background="Transparent" Margin="274,391,117,173">
                <Image Height="43" RenderTransformOrigin="0.5,0.5" Width="48" Source="/images2/phantom wallet.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>

                </Image>
            </Button>

        </Grid>
    </Border>
</Window>
