<Application x:Class="Crypto_wallet_ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Crypto_wallet_ui"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Color x:Key="ExodusPrimaryDark">#0F1B2D</Color>
            <Color x:Key="ExodusPrimaryMid">#162B47</Color>
            <Color x:Key="ExodusPrimaryAccent">#1F3B65</Color>

            <LinearGradientBrush x:Key="ExodusBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource ExodusPrimaryDark}" Offset="0.0"/>
                <GradientStop Color="{StaticResource ExodusPrimaryMid}" Offset="0.5"/>
                <GradientStop Color="{StaticResource ExodusPrimaryAccent}" Offset="1.0"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="Dark_red" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0A0A0A" Offset="0.0"/>
                <GradientStop Color="#400010" Offset="0.3"/>
                <GradientStop Color="#800020" Offset="0.6"/>
                <GradientStop Color="#C62828" Offset="1.0"/>
            </LinearGradientBrush>

        <LinearGradientBrush x:Key="Orange" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFDA085" Offset="0.0"/>
            <!-- Soft Peach-Orange -->
            <GradientStop Color="#FFFA709A" Offset="1.0"/>
            <!-- Light Pink -->
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="deeppurple" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1A1F71" Offset="0.0"/>
            <!-- Deep Indigo Blue -->
            <GradientStop Color="#FF4A00E0" Offset="0.5"/>
            <!-- Vivid Purple -->
            <GradientStop Color="#FF00D4FF" Offset="1.0"/>
            <!-- Bright Cyan -->
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="Lowblue" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1C1B3A" Offset="0.0"/>
            <!-- Muted Navy / Indigo -->
            <GradientStop Color="#FF3E1E89" Offset="0.45"/>
            <!-- Rich Purple -->
            <GradientStop Color="#FF007CF0" Offset="1.0"/>
            <!-- Electric Blue / Cyan -->
        </LinearGradientBrush>

    </Application.Resources>
</Application>
